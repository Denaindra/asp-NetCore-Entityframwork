
@model EFDataAccessLayer.Model.Expense

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expenses</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpensesType"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Amout"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ExpensesType" class="form-control" />
                        <span asp-validation-for="ExpensesType" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input type="number" asp-for="Amout" class="form-control" />
                        <span asp-validation-for="Amout" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <button asp-action="Index" class="btn btn-danger w-75">Back</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

